{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd java-backend && mvn clean install -DskipTests"
  },
  "deploy": {
    "startCommand": "cd java-backend && java -jar target/taskflow-backend-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
